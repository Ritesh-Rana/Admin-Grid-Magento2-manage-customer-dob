<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="customer_dob_manage">
        <column xsi:type="int" name="id" padding="10" identity="true" nullable="false" comment="ID" />
        <column xsi:type="varchar" name="email" length="100" nullable="false" comment="Customer Email" />
        <column xsi:type="varchar" name="dob" length="100" nullable="false" comment="Customer Date of birth" />
        <column xsi:type="int" name="greeting_status" padding="2" nullable="false" comment="Status" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id" />
        </constraint>
    </table>
</schema>