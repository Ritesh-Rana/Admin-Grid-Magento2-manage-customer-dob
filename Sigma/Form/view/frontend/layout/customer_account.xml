<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="custom.mytable.link">
                <arguments>
                    <argument name="path" xsi:type="string">sigma_form/tabledata/formdata</argument>
                    <argument name="label" xsi:type="string">SQL Table Data</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="custom.form.link">
                <arguments>
                    <argument name="path" xsi:type="string">sigma_form</argument>
                    <argument name="label" xsi:type="string">Custom Form </argument>
                </arguments>
            </block>
        </referenceBlock>        
    </body>
</page>
